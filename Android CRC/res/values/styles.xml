<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.NoTitleBar" />
    
    <!-- Text -->
    
    <style name="CatchoomURL">
        <item name="android:textColor">#CC2228</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BubbleText">
        <item name="android:textColor">@color/bubble_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/bubble</item>
        <item name="android:shadowColor">@color/light_text_shadow</item>
        <item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">2</item>
    </style>
    
    <style name="HeadingText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/heading_text_color</item>
        <item name="android:shadowColor">@color/light_text_shadow</item>
        <item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">2</item>
    </style>
    
    <style name="AuxText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/auxiliar_text_color</item>
    </style>
    
    <!-- Widgets -->
    
    <style name="InputText">
        <item name="android:background">@drawable/bg_input_text</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- Buttons -->
    
    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">3dp</item>
    </style>
    
    <style name="RedButton" parent="@style/Button">
        <item name="android:background">@drawable/red_button_drawable</item>
    </style>
    
    <style name="DisabledButton" parent="@style/Button">
        <item name="android:background">@drawable/bg_disabled_button</item>
    </style>

</resources>